
// Job paramaters to set for this environment

params.vep_cache = "/mnt/ld_ng_out/sukmb352/references"
params.vep_fasta = "/mnt/ld_ng_out/sukmb352/references/vep/Homo_sapiens.GRCh37.dna.primary_assembly.fa"

params.scratch = true

gatk_bundle_path = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8"

// Resource manager settings

executor {
  queueSize=100
}

// Process setting

process {
  
  executor = 'slurm'
  queue = 'htc'
 
}

params {

   genomes {

	'hg19' {
		fasta = "${gatk_bundle_path}/hg19/ucsc.hg19.fasta"
		dict = "${gatk_bundle_path}/hg19/ucsc.hg19.dict"
		dbsnp = "${gatk_bundle_path}/hg19/dbsnp_138.hg19.vcf.gz"
		gold = "${gatk_bundle_path}/hg19/Mills_and_1000G_gold_standard.indels.hg19.sites.vcf.gz"
		g1k = "${gatk_bundle_path}/hg19/1000G_phase1.indels.hg19.sites.vcf.gz"
		omni = "${gatk_bundle_path}/hg19/1000G_omni2.5.hg19.sites.vcf.gz"
		hapmap = "${gatk_bundle_path}/hg19/hapmap_3.3.hg19.sites.vcf.gz"
		calibration_exomes_gatk = "/mnt/ld_ng_out/sukmb352/references/exomes/calibration_exomes_resorted/gvcf/gatk4/hg19_xGEN/calibration_exomes.list"
		calibration_samples_list_args = "/mnt/ld_ng_out/sukmb352/references/exomes/calibration_exomes_resorted/gvcf/gatk4/hg19_xGEN/calibration_exomes.sampels.args"
		kits {
      			'Nextera' {
         			targets = "/mnt/ld_ng_out/sukmb352/references/exomes/nextera_exome_target_2017/nexterarapidcapture_exome_target_v1.2_hg19.interval_list"
         			baits = "/mnt/ld_ng_out/sukmb352/references/exomes/nextera_exome_target_2017/nexterarapidcapture_exome_intervals_v1.2_hg19.interval_list"
      			}
      			'xGen' {
        			targets = "/mnt/ld_ng_out/sukmb352/references/exomes/idt_xgen/v1.0/xgen-exome-research-panel-targets.interval_list"
        			baits = "/mnt/ld_ng_out/sukmb352/references/exomes/idt_xgen/v1.0/xgen-exome-research-panel-probes.interval_list"
      			}
			'xGen_custom' {
                                targets = "/mnt/ld_ng_out/sukmb352/references/exomes/idt_xgen/v1.0_custom/hg19/xgen-exome-research-panel-targets.interval_list"
                                baits = "/mnt/ld_ng_out/sukmb352/references/exomes/idt_xgen/v1.0_custom/hg19/xgen-exome-research-panel-probes.interval_list"
                        }
   		}
	}
	'GRCh37' {
		fasta = "${gatk_bundle_path}/b37/human_g1k_v37.clean.fasta"
		dict = "${gatk_bundle_path}/b37/human_g1k_v37.clean.dict"
		dbsnp = "${gatk_bundle_path}/b37/dbsnp_138.b37.vcf.gz"
		gold = "${gatk_bundle_path}/b37/Mills_and_1000G_gold_standard.indels.b37.vcf.gz"
		g1k = "${gatk_bundle_path}/b37/1000G_phase1.indels.b37.vcf.gz"
		hapmap = "${gatk_bundle_path}/b37/hapmap_3.3.b37.vcf.gz"
		calibration_exomes_gatk = ""
		calibration_samples_list_args = ""
		kits {
			'Nextera' {
         			targets = "/mnt/ld_ng_out/sukmb352/references/exomes/nextera_exome_target_2017/nexterarapidcapture_exome_target_v1.2_hg19.interval_list"
         			baits = "/mnt/ld_ng_out/sukmb352/references/exomes/nextera_exome_target_2017/nexterarapidcapture_exome_intervals_v1.2_hg19.interval_list"
      			}
      			'xGen' {
        			targets = "/mnt/ld_ng_out/sukmb352/references/exomes/idt_xgen/v1.0/xgen-exome-research-panel-targets.interval_list"
        			baits = "/mnt/ld_ng_out/sukmb352/references/exomes/idt_xgen/v1.0/xgen-exome-research-panel-probes.interval_list"
      			}
		}
	}
	'test' {
                fasta = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8/test_data/chr17.fa"
		dict = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8/test_data/chr17.dict"
                dbsnp = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8/test_data/dbsnp_138.hg19.vcf.gz"
                gold = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8/test_data/Mills_and_1000G_gold_standard.indels.hg19.sites.vcf.gz"
                g1k = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8/test_data/1000G_phase1.indels.hg19.sites.vcf.gz"
                omni = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8/test_data/1000G_omni2.5.hg19.sites.vcf.gz"
                hapmap = "/mnt/ld_ng_out/sukmb352/references/gatk/bundle/2.8/test_data/hapmap_3.3.hg19.sites.vcf.gz"
		exac = "/mnt/ld_ng_out/sukmb352/references/exac/0.3.1/ExAC.r0.3.1.sites.vep.vcf.gz"
                cadd = "/mnt/ld_ng_out/sukmb352/references/cadd/1.3/whole_genome_SNVs.tsv.gz"
                annovar_db = "/ifs/data/nfs_share/ikmb_repository/software/annovar/2017-09-20/humandb"
		kits {
      			'Nextera' {
         			targets = "/mnt/ld_ng_out/sukmb352/references/exomes/test_data/nexterarapidcapture_exome_target_v1.2_hg19.interval_list"
			        baits = "/mnt/ld_ng_out/sukmb352/references/exomes/test_data/nexterarapidcapture_exome_intervals_v1.2_hg19.interval_list"
      			}
      			'xGen' {
        			targets = "/mnt/ld_ng_out/sukmb352/references/exomes/test_data/xgen-exome-research-panel-targets.interval_list"
        			baits = "/mnt/ld_ng_out/sukmb352/references/exomes/test_data/xgen-exome-research-panel-probes.interval_list"
      			}
   		}
        }

   }


}


params {
  // Defaults only, expecting to be overwritten
  max_memory = 250.GB
  max_cpus = 20
  max_time = 240.h
  maxMultiqcEmailFileSize = 25.MB
}

