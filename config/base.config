
// Job paramaters to set for this environment

params.scratch = true

// Resource manager settings

// Process setting

process {

  // Global cluster parameters
  cpus = { check_max( 1 * task.attempt, 'cpus' ) }
  memory = { check_max( 8.GB * task.attempt, 'memory' ) }
  time = { check_max( 2.h * task.attempt, 'time' ) }

  errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
  maxRetries = 3
  maxErrors = '-1'
 
  // Specific cluster parameters for each process

  $runBWA {
	conda = "bwa=0.7.16 samtools=1.5"
	memory = { check_max( 16.GB * task.attempt, 'memory' ) }
	time = { check_max( 4.h * task.attempt, 'time' ) }
	cpus = { check_max( 16 * task.attempt, 'cpus' ) }
  }

  $runTrimgalore {
     conda = "trim-galore=0.4.4"
     time = { check_max( 3.h * task.attempt, 'time' ) }
     memory = { check_max( 8.GB * task.attempt, 'memory' ) }
  }

  $mergeBamFiles_bySample {
	conda = "picard=2.18.7"
        memory = { check_max( 16.GB * task.attempt, 'memory' ) }
        time = { check_max( 2.h * task.attempt, 'time' ) }
        cpus = { check_max( 4 * task.attempt, 'cpus' ) }
  }

  $runMarkDuplicates { 
        conda = "picard=2.18.7"
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 12.h * task.attempt, 'time' ) }
        cpus = { check_max( 5 * task.attempt, 'cpus' ) }
  }

  $runBaseRecalibrator {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 12.h * task.attempt, 'time' ) }
        cpus = { check_max( 2 * task.attempt, 'cpus' ) }
  }

  $runApplyBQSR {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 48.h * task.attempt, 'time' ) }
  }

  $runOxoGMetrics {
        conda = "picard=2.18.4"	
        time = { check_max( 6.h * task.attempt, 'time' ) }
  }

  $runHybridCaptureMetrics {
     conda = "picard=2.18.4"   
     time = { check_max( 6.h * task.attempt, 'time' ) }
  }

  $runCollectMultipleMetrics {
	conda = "picard=2.18.4"
        memory = { check_max( 25.GB * task.attempt, 'memory' ) }
        time = { check_max( 12.h * task.attempt, 'time' ) }
  }

  $runMultiQCFastq {
	conda = "multiqc=1.5"
        time = { check_max( 6.h * task.attempt, 'time' ) }
  }

  $runMultiQCLibrary {
	conda = "multiqc=1.5"
  }

  $runMultiQCSample {
	conda = "multiqc=1.5"
  }

  $runHCSample {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 25.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
  }

  $runGenomicsDBImport {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
  } 

  $runJoinedGenotyping {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 48.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
  }

  $runHardFilterIndel {
        conda = "gatk4=4.0.7.0"
	memory = { check_max( 8.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }
        cpus = { check_max( 4 * task.attempt, 'cpus' ) }
  }

  $runHardFilterSNP {
        conda = "gatk4=4.0.7.0"
        memory = { check_max( 8.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }
        cpus = { check_max( 4 * task.attempt, 'cpus' ) }
  }

  $combineVariantsFromGenotyping {
	conda = "picard=2.18.4 gatk4=4.0.7.0"
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 5.h * task.attempt, 'time' ) }
  }

  $runRecalibrationModeSNP {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 25.GB * task.attempt, 'memory' ) }
        time = { check_max( 8.h * task.attempt, 'time' ) }
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
  }

  $runRecalibrationModeIndel {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 25.GB * task.attempt, 'memory' ) }
        time = { check_max( 8.h * task.attempt, 'time' ) }
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
  }

  $runRecalIndelApply {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 25.GB * task.attempt, 'memory' ) }
        time = { check_max( 8.h * task.attempt, 'time' ) }
  }

  $runRecalSNPApply {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 8.h * task.attempt, 'time' ) }
        cpus = { check_max( 16 * task.attempt, 'cpus' ) }
  } 

  $runVariantFiltrationIndel {
	conda = "gatk4=4.0.7.0"
        memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }

  }

  $runCombineVariants {
	conda = "picard=2.18.4 gatk4=4.0.7.0"
  }

  $runCombineHardVariants {
        conda = "picard=2.18.4 gatk4=4.0.7.0"
  }

  $runVep {
	conda = "variant-effect-predictor=86"
	memory = { check_max( 32.GB * task.attempt, 'memory' ) }
        time = { check_max( 4.h * task.attempt, 'time' ) }
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
  }

}

params {
  // Defaults only, expecting to be overwritten
  max_memory = 128.GB
  max_cpus = 16
  max_time = 240.h
  maxMultiqcEmailFileSize = 25.MB
}


